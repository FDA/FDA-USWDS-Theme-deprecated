<div class="usa-card__container fda-card">
  <header class="usa-card__header">
    <h2 class="usa-card__heading"><a href="#">{{ card.title }}</a></h2>
  </header>
  {%- if card.media -%}
  <div class="usa-card__media{% if card.media_classes %} {{ card.media_classes }}{% endif %}">
    <div class="usa-card__img{% if card.image_classes %} {{ card.image_classes }}{% endif %}">
      <img
        src="https://designsystem.digital.gov/img/introducing-uswds-2-0/built-to-grow--alt.jpg"
        alt="A placeholder image">
    </div>
  </div>
  {%- endif -%}
  <div class="usa-card__body">
    {%- block card_body -%}
    {%- if card.content -%}
    <span class="usa-tag">New Section</span>
    <p>{{ card.content }}</p>
    {%- endif -%}
    {%- endblock -%}
  </div>

</div>